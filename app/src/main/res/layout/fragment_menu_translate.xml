<!-- activity_menu.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/roxo_escuro"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <!-- Adicione seus componentes para o Container 1 aqui -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_deaft" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Não sei"
            android:textColor="@color/cor_titulo"
            android:textSize="48sp"
            android:textStyle="bold|italic" />

    </FrameLayout>


    <Button
        android:id="@+id/btn_select_vibration"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/container1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rounded"
        android:text="Tradução"
        android:textColor="@color/cor_botao_texto" />

    <Button
        android:id="@+id/btn_select_dic_com"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/container1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/btn_select_vibration"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Dicionário da Comunidade"
        android:textColor="@color/cor_botao_texto" />


</RelativeLayout>
