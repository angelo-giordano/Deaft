<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Tudo"
        app:layout_constraintBottom_toTopOf="@+id/btnTalvez"
        app:layout_constraintStart_toStartOf="@+id/btnSim"
        app:layout_constraintTop_toBottomOf="@+id/btnSim"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:text="Sim"
        app:layout_constraintEnd_toStartOf="@+id/btnNao"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTalvez"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="420dp"
        android:text="Talvez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCerto"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/btnTudo" />

    <Button
        android:id="@+id/btnCerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="32dp"
        android:text="Certo"
        app:layout_constraintBottom_toTopOf="@+id/btnTalvez"
        app:layout_constraintStart_toEndOf="@+id/btnTudo" />

    <Button
        android:id="@+id/btnNao"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="36dp"
        android:text="NÃ£o"
        app:layout_constraintBottom_toTopOf="@+id/btnCerto"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="36dp"
        android:text="Praticar"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>